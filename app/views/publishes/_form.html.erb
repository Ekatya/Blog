

<%= form_for @publish do |f| %> 
    <%= f.label :title, "Заглавие" %>
    </br>
    <%= f.text_field :title, class: 'dd' %>
    </br>
    <%= f.label :body, "Текст" %>
    </br>
    <%= f.text_area :body, class: 'dd', size: "30x6" %>
    <%= hidden_field_tag(:id, params[:id]) %>
    </br>
  <%= f.submit %>
<% end %>


<br>
<% if flash[:notice] %>
<%= flash[:notice] %>
<% end %>


